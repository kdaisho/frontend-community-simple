{
    "name": "frontend-community-simple",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev:client": "pnpm --filter client dev",
        "dev:server": "pnpm --filter server dev",
        "dev": "npm-run-all --parallel dev:client dev:server",
        "build": "pnpm --filter client build",
        "lint": "eslint --ext .ts,.svelte .",
        "prepare": "husky install",
        "bootstrap": "rm -rf node_modules apps/client/node_modules apps/server/node_modules && pnpm install && docker compose down && docker volume rm frontend-community-simple_fcdata && docker compose up -d --force-recreate && pnpm -F server migrate"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "workspaces": [
        "apps/*"
    ],
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "eslint": "^8.28.0",
        "husky": "^8.0.3"
    },
    "dependencies": {
        "npm-run-all": "^4.1.5",
        "zod": "^3.21.4"
    }
}
