{
    "name": "frontend-community-simple",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev:client": "pnpm --filter client dev",
        "dev:server": "pnpm --filter server dev",
        "dev": "npm-run-all --parallel dev:client dev:server",
        "prod:client": "pnpm --filter client prod",
        "prod:server": "pnpm --filter server prod",
        "prod": "npm-run-all --parallel prod:client prod:server",
        "build": "pnpm --filter client build",
        "check": "pnpm --filter client check",
        "lint": "eslint --ext .ts,.svelte .",
        "prepare": "husky install",
        "migrate:up": "pnpm --filter server migrate:up",
        "migrate:down": "pnpm --filter server migrate:down",
        "migrate:create": "pnpm --filter server migrate:create",
        "bootstrap": "rm -rf node_modules apps/client/node_modules apps/server/node_modules && pnpm install && docker compose down --volumes && docker compose up -d --force-recreate && pnpm -F server migrate:up"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "workspaces": [
        "apps/*"
    ],
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "eslint": "^8.57.0",
        "husky": "^8.0.3"
    },
    "dependencies": {
        "npm-run-all": "^4.1.5",
        "zod": "^3.23.8"
    }
}
